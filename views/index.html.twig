<html>
<head>
    <title>To Do List</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
</head>
<body>
    <h1>Welcome to To Do List</h1>

    <p>Create a new category:</p>

    <form action="/categories" method="post">
        <label for="name">Category name:</label>
        <input id="name" name="name" type="text">
        <button type="submit">Add category</button>
    </form>

    {% if categories is not empty %}
        <p>Here are all your categories:</p>
        <ul>
            {% for category in categories %}
                <li><a href="/categories/{{ category.getId }}">{{ category.getName }}</a></li>
            {% endfor %}
        </ul>
    {% else %}
        <p>There are no categories yet!</p>
    {% endif %}

    <form action="/all_tasks">
        <button type="submit">List All Tasks</button>
    </form>

    <form action="/delete_categories" method="post">
        <button type="submit">Clear Categories</button>
    </form>

</body>
</html>
