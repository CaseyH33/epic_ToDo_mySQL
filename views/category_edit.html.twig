<html>
<head>
    <title>To Do List</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
</head>
<body>
    <div class="container">
        <h1>Update the {{ category.getName }} category </h1>

        <form action="/categories/{{ category.getId }}" method="post">
          <input name="_method" type="hidden" value="patch">

          <label for="name">Rename your category:</label>
          <input id="name" name="name" type="text">

          <button type="submit" class="submit">Update</button>
        </form>

        <form action="/categories/{{ category.getId }}" method="post">
            <input name="_method" type="hidden" value="delete">
            <button type="submit" class="btn btn-danger">Delete this category</button>
        </form>
        <form action="/">
            <button type='submit' class='btn btn-info'>Home</button>
        </form>
    </div>
</body>
</html>
